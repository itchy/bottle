<div id="<%= product.color %>" class="product grid_4">
	<div class="image_wrapper">
		<%= image_tag(product.image_path, :class =>"product_image")%>
	</div>
	<div class="text_wrapper">
		<%= product.color.capitalize %><br />
		<%= "$#{product.price}" %>
		<%= button_to("Add", "/buy", :class => "add", :confirm => "This will eventually add to cart.")%>
	</div>		
</div>